<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imageviewMain"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/frut"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:backgroundTint="?android:attr/colorBackground"
        android:onClick="btnTakePhotoClicked"
        app:srcCompat="@drawable/scan_logo" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageviewMain"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageviewMain"
        android:layout_marginTop="14dp"
        android:backgroundTint="@android:color/background_light"
        android:onClick="btnCari"
        app:srcCompat="@drawable/cari" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageviewMain"
        android:layout_alignRight="@+id/imageviewMain"
        android:layout_below="@+id/imageButton2"
        android:layout_marginTop="14dp"
        android:backgroundTint="@android:color/background_light"
        android:onClick="btnInfoBak"
        app:srcCompat="@drawable/tombol" />

    <ImageButton
        android:id="@+id/imageButton16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/background_light"
        app:srcCompat="@drawable/caripasar1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton"
        android:onClick="caripas"/>


</RelativeLayout>